@model MovieBooker.Models.Movie

@{
    ViewBag.Title = "LoginMember";
        Layout = "../Shared/MovieBookerLayout.cshtml";
}


<html>
<head>
    <title></title>
    <script language="javascript">
        function SetMoviePoster(number)
        {
            var MovieList = @Html.Raw(Json.Encode(ViewBag.ViewMovie));
            var i = 0;
            for(var movie in MovieList)
            {
                if(i == number)
                {
                    document.getElementById("image" + number).src = "/Images/"+MovieList[i].Movieposter;
                    document.getElementById("label" + number).innerText = MovieList[i].Movieposter;
                }
                i++;
            }
        }
    </script>

</head>
<body>
        <table cellpadding="10"  class="one">
            <tr>
                <td colspan="3" class="h1">
                    현재 상영 영화
                </td>
            </tr>

            <tr>

                <td><input type="image" id="image0" /></td>
                <td><input type="image" id="image1" /></td>
                <td><input type="image" id="image2" /></td>
            </tr>
            <tr>
                <td>@Html.Label("영화 준비중입니다.", new { id = "label0" })</td>
                <td>@Html.Label("영화 준비중입니다.", new { id = "label1" })</td>
                <td>@Html.Label("영화 준비중입니다.", new { id = "label2" })</td>
            </tr>
        </table>
        <table class="two">
            <tr style="height:60px;">
                <td align="right">
                <input type="button" value="포인트 충전" class="button big gray" onclick="location.href='@Url.Action("RechargePoint", "Point")'" /></td>
                </tr>
            <tr style="height:60px;">
                <td align="right">
                    <input type="button" value="예매하기" class="button big gray" onclick="location.href='@Url.Action("Booking", "Book")'" />
                </td>
            </tr>
            <tr style="height:60px;">
                <td align="right">
                    <input type="button" value="예매내역 확인" class="button big gray" onclick="location.href='@Url.Action("BookingList", "Book")'" />
                </td>
            </tr>
            <tr style="height:60px;">
                <td align="right">
                    <input type="button" value="로그 아웃" class="button big gray" onclick="location.href='@Url.Action("Logout", "Home")'" />
                </td>
            </tr>
        </table>
        @for (int i = 0; i <= Enumerable.Count(ViewBag.ViewMovie); i++)
        {
            if (i == 3)
            {
                break;
            }
            @*<input type="text" value=@ViewBag.ViewMovie[i].Movieposter />*@
            <script type="text/javascript">
                SetMoviePoster(@i)
            </script>

        }


</body>
</html>

