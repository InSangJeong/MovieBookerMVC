@model MovieBooker.Models.Theater
@{
    ViewBag.Title = "TheaterList";
    Layout = "../Shared/MovieBookerLayout.cshtml";
}

<h2>상영관 목록</h2>

<html>
<head>
    <title></title>

</head>
<body>
    <table  border="1" id="TheaterTable" align="center">
        <tr>
            <th align="center">상영관 ID </th>
            <th align="center">총 좌석수</th>
            <th align="center">마지막 열</th>
            <th align="center">열당 좌석수</th>
            @*<th></th>*@
        </tr>
        @foreach (MovieBooker.Models.Theater theater in ViewBag.Theaters)
        {
            <tr>
                <td align="center">@theater.TheaterID</td>
                <td align="center">@theater.Seatcount</td>
                <td align="center">@theater.Seatrowcount</td>
                <td align="center">@theater.Seatnumbercount</td>

        </tr>
        }


    </table>
    <script type="text/javascript">
        SetTheatersToTable();
    </script>

    <table align="center">
        <tr>
            @using (Html.BeginForm("NewTheater", "Theater"))
            {
                <th align="center">@Html.TextBoxFor(m => m.Seatrowcount, new { size = 5 })관 </th>
                <th align="center">@Html.TextBoxFor(m => m.Seatnumbercount, new { size = 5 })열</th>
                <th align="center">
                    <input type="submit" class="button samll gray" value="상영관 추가" />
                </th>
            }
            @using (Html.BeginForm("loginAdmin", "Home"))
            {
                <th align="center">
                    <input type="submit" class="button samll gray" value="이전페이지" />
                </th>
            }
        </tr>
        <tr>
            <td colspan="3">
                * 상영관은 Max열 Max번까지 입력해주세요.
            </td>
        </tr>
    </table>
   
    <br />
</body>
</html>